.home, .page .content:not(.custom) {
  max-width 33rem
}

div.custom-layout
  padding-top 0

.action-button
  display inline-block
  font-size 1.2rem
  color #fff
  background-color $accentColor
  padding 0.8rem 1.6rem
  border-radius 4px
  transition background-color .1s ease
  box-sizing border-box
  border-bottom 1px solid darken($accentColor, 10%)
  &:hover
    background-color lighten($accentColor, 10%)

.hero
  margin-top 0
  text-align center
  img
    max-height 125px
    display block
    margin 3rem auto 1.5rem
    border-radius 50%
  h1
    font-size 3rem
  h1, .description, .action
    margin 1.8rem auto
  .description
    max-width 35rem
    font-size 1.6rem
    line-height 1.3
    color $textColor//lighten($textColor, 15%)


body, .sidebar, header.navbar
    background-color $bgColor // !important

.search-box
    input, .suggestions
        background-color $searchBgColor
    .suggestion
        a
            color $textColor //darken($accentColor) // TODO contrast
        &.focused
            background-color lighten($bgColor, 25%)
            background-color $bgColor
            color $accentColor

